@{
    ViewBag.Title = "Home Page";
}


@model List<SoftUniBook.Models.Post>

<div class="col">
    <div class="col-md-2">
        <div class="">

            @if (User.Identity.IsAuthenticated)
            {
                <h2>@HttpContext.Current.User.Identity.Name.ToString()</h2>

                var a = ".png";

                <img src="/Content/Pics/@HttpContext.Current.User.Identity.Name@a" height="250" width="250">

            }
            else
            {
                <br />
                    <div>
                        <img class="img" src="http://paidtoblog.co/wp-content/themes/genesis-sample/images/icons/exclusive-articles.png" alt="" style="vertical-align:text-bottom">
                    </div>
                    <a class="btn btn-primary" href="http://localhost:49674/Account/Register">Нямаш профил?<br />Присъидини се към нас</a>
            }
        </div>
    </div>
</div>

<section class="col-md-7">
    @foreach (var post in Model)
            {
        <article class="post col-md-6 col-lg-offset-2">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Публикувано
                @if (post.Author != null)
                {
                    @:от
                                                 <i>@post.Author.Email (@post.Author.FullName)</i>
                }
                на <i>@post.Date</i>
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }
</section>

<div class="col">
    <div class="col-md-2">
        <div class="">
            <h2>Реклама</h2>

            <img src="http://www.box.bg/ads/www/images/29d8439ac9e37c5df07e2d53cc5e56c4.jpg" width="300" height="250" alt="" title="" border="0">
            <br />
            <img src="http://www.box.bg/ads/www/images/01cd97a740ef269840aba22926cd6654.jpg" width="300" height="250" alt="" title="" border="0">
            <br />
            <img src="http://www.box.bg/ads/www/images/1dff51624c9138797375ebaf261f32ce.jpg" width="300" height="250" alt="" title="" border="0">
        </div>
        
    </div>
</div>

