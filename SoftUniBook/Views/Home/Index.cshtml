@{
    ViewBag.Title = "Home Page";
}


@model List<MVCBlog.Models.Post>

<div class="col">
    <div class="col-md-2">
        <div class="">
            <h2>
                @if (User.Identity.IsAuthenticated)
                {
                    @HttpContext.Current.User.Identity.Name.ToString()
                }
                else
                {
                    @Html.ActionLink("Регистрирай нов потребител", "Register")
                }

            </h2>
            <p>
                
            </p>
        </div>
    </div>
</div>

<section class="col-md-8">
    @foreach (var post in Model)
            {
        <article class="post col-md-6 col-lg-offset-2">
            <h2 class="title">@post.Title</h2>
            <div class="about">
                Публикувано
                @if (post.Author != null)
                {
                    @:от
                    <i>@post.Author.User (@post.Author.UserName)</i>
                }
                на <i>@post.Date</i>
            </div>
            <div class="body">@Html.Raw(post.Body)</div>
        </article>
    }
</section>

<div class="col-md-2">
    <h2>Реклама</h2>
    <p>Тук може да сложим рекламки или снимки или потребители</p>
    <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
</div>
